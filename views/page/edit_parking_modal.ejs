<!-- Modal -->
<div
  class="modal fade"
  id="edit-parking-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update Parking</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/parking?_method=PUT" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label for="name">Vehicle Type</label>
            <select class="form-control vehicle_id" id="inputVehicleType" name="vehicle_id" required>
                <% for(var i=0; i < vehicle.length; i++) { %>
                <option value='<%= vehicle[i].id %>'  ><%= vehicle[i].name %></option>
                <% } %>
              </select>
          </div>
          <div class="form-group">
            <label for="modalInputParkingIn" class="form-label">Parking in</label>
            <input type="datetime-local" class="form-control parking_in" id="modalInputParkingIn" name="parking_in" required>
          </div>
          <div class="form-group">
            <label for="modalInputParkingOut" class="form-label">Parking out</label>
            <input type="datetime-local" class="form-control parking_out" id="modalInputParkingOut" name="parking_out" required>
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" class="id" name="id" />
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>